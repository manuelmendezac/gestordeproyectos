rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- REGLAS PÚBLICAS ---
    // Estas reglas permiten que CUALQUIER usuario autenticado (incluidos los anónimos)
    // lea y escriba en la colección pública de la app.
    //
    // Esta es la regla que soluciona el error "Missing or insufficient permissions"
    // para tu gestor de proyectos.
    match /artifacts/{appId}/public/data/{collection}/{document=**} {
      allow read, write: if request.auth != null;
    }

    // --- REGLAS PRIVADAS (Ejemplo) ---
    // Esto es para datos que solo un usuario específico puede ver.
    // (Tu app actual no usa esto, pero es bueno tenerlo)
    match /artifacts/{appId}/users/{userId}/{collection}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}